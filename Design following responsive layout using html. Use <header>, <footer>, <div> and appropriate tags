<body>
  <header>
    <h1>Responsive Layout Example</h1>
  </header>
  
  <div class="main-container">
    <div class="color-box" id="colorBox">
      This section should change color after clicking the buttons below.
    </div>
    <div class="buttons-container">
      <button class="blue-button" onclick="changeColor('blue')"></button>
      <button class="orange-button" onclick="changeColor('orange')"></button>
      <button class="green-button" onclick="changeColor('green')"></button>
    </div>
  </div>
  
  <footer>
    <p>&copy; 2024 Example Footer</p>
  </footer>
  
  <script>
    function changeColor(color) {
      const colorBox = document.getElementById('colorBox');
      colorBox.style.backgroundColor = color;
    }
  </script>
</body>
